<Window x:Class="DEMOwwpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DEMOwwpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Grid.Row="1" Grid.Column="1"> Hello World</Label>
        <Label Grid.Row="1" Grid.Column="0">Hello World</Label>
        <Label Grid.Row="1" Grid.Column="2">Hello World</Label>
        <Label Grid.Row="1" Grid.Column="3">Hello World</Label>
        <DockPanel Grid.Column="3">
            <Button DockPanel.Dock="Top" Height="20">Top</Button>
            <Button DockPanel.Dock="Bottom" Height="20">Down</Button>
            <Button DockPanel.Dock="Left" Width="20">left</Button>
            <Button DockPanel.Dock="Right" Width="20">Right</Button>
            <Label Visibility="Hidden"> </Label>

        </DockPanel>
        <StackPanel Grid.Row ="2" Grid.Column="2" Orientation="Horizontal">
            <Label>HEllo world </Label>
            <Label>HEllo world</Label>
            <Label>HEllo world</Label>
            <Label>HEllo world</Label>
            <Label>HEllo world</Label>
            <Label>HEllo world</Label>
        </StackPanel>
        <WrapPanel Grid.Row="3" Grid.Column="2" Orientation="Vertical">
            <Label>HEllo world</Label>
            <Label>HEllo world</Label>
            <Label>HEllo world</Label>
            <Label>HEllo world</Label>
            <Label>HEllo world</Label>
            <Label>HEllo world</Label>
        </WrapPanel>
    </Grid>
</Window>
