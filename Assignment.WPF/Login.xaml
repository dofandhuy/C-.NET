<Page x:Class="Assignment.WPF.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Assignment.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid Background="White" MaxWidth="450" VerticalAlignment="Center" Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
               Text="FUMini Hotel Login"
               FontSize="32" 
               FontWeight="Bold"
               Foreground="#007ACC" 
               HorizontalAlignment="Center" 
               Margin="0, 20, 0, 0"/>

        <Grid Grid.Row="2" Margin="0, 10, 0, 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Content="Email Address:" VerticalAlignment="Center" 
               FontSize="14" Foreground="#333333"/>
            <TextBox Grid.Column="1" 
                 Name="email" 
                 Height="40" 
                 Padding="8, 0, 8, 0"
                 BorderBrush="#CCCCCC"
                 BorderThickness="1"
                 VerticalContentAlignment="Center"
                 ToolTip="Vui lòng nhập địa chỉ email của bạn"/>
        </Grid>

        <Grid Grid.Row="3" Margin="0, 10, 0, 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Content="Password:" VerticalAlignment="Center" 
               FontSize="14" Foreground="#333333"/>
            <PasswordBox Grid.Column="1" 
                     Name="password" 
                     Height="40" 
                     Padding="8, 0, 8, 0"
                     BorderBrush="#CCCCCC"
                     BorderThickness="1"
                     VerticalContentAlignment="Center"/>
        </Grid>

        <StackPanel Grid.Row="5" 
                Orientation="Horizontal" 
                HorizontalAlignment="Center" 
                Margin="0, 10, 0, 30">

            <Button Click="ButtonBase_OnClick" 
                Content="LOG IN" 
                Background="#007ACC" 
                Foreground="White"
                FontWeight="Bold"
                FontSize="16"
                Height="45" Width="150" 
                Margin="15, 0, 15, 0"
                />

            <Button Click="ButtonBase_OnClickRegister" 
                Content="REGISTER" 
                Background="#E0E0E0" 
                Foreground="#333333"
                FontWeight="SemiBold"
                FontSize="16"
                Height="45" Width="150" 
                Margin="15, 0, 15, 0"
                />
        </StackPanel>
    </Grid>
</Page>
