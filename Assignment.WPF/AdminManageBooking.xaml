<Page x:Class="Assignment.WPF.AdminManageBooking"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="AdminManageBooking"
      Background="#F8F8F8">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="QUẢN LÝ ĐẶT PHÒNG"
                   FontSize="24" 
                   FontWeight="Bold"
                   Foreground="#C0392B"
                   HorizontalAlignment="Center"
                   Margin="0, 10, 0, 15"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3.5*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>

            <DataGrid Name="Reservation" 
                      CanUserAddRows="False" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True" 
                      SelectionMode="Single"
                      Margin="0, 0, 15, 0"
                      PreviewMouseLeftButtonUp="Rooms_OnPreviewMouseLeftButtonUp">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding BookingReservationId}" Width="40"/>
                    <DataGridTextColumn Header="Ngày Đặt" Binding="{Binding BookingDate, StringFormat='dd/MM/yyyy'}" Width="2*"/>
                    <DataGridTextColumn Header="Khách hàng" Binding="{Binding Customer.CustomerFullName}" Width="3*"/>
                    <DataGridTextColumn Header="Tổng tiền" Binding="{Binding TotalPrice, StringFormat=C0}" Width="2*"/>
                    <DataGridCheckBoxColumn Header="Trạng thái" Binding="{Binding BookingStatus}" Width="*"/>
                    <DataGridTextColumn Header="Số lượng Phòng" Binding="{Binding BookingDetails.Count}" Width="1.5*"/>
                </DataGrid.Columns>
            </DataGrid>

            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10, 0">

                    <TextBlock Text="Reservation ID" />
                    <TextBox Name="txtId" IsReadOnly="True" Text="{Binding ElementName=Reservation, Path=SelectedItem.BookingReservationId, Mode=OneWay}"  />

                    <TextBlock Text="Booking Date" />
                    <DatePicker Name="dpBooking" IsEnabled="False" Text="{Binding ElementName=Reservation, Path=SelectedItem.BookingDate, Mode=OneWay}" />

                    <TextBlock Text="Total Price" />
                    <TextBox Name="txtPrice" IsReadOnly="True" Text="{Binding ElementName=Reservation, Path=SelectedItem.TotalPrice, Mode=OneWay}" />

                    <TextBlock Text="Customer" />
                    <ComboBox Name="cbCustomer" IsEnabled="False" />

                    <TextBlock Text="Booking Status" />
                    <StackPanel Orientation="Horizontal" Margin="0, 5, 0, 15">
                        <RadioButton Content="Active" Margin="0,0,20,0" Name="active" GroupName="BookingStatus"></RadioButton>
                        <RadioButton Content="Canceled/Closed" Name="deactive" GroupName="BookingStatus"></RadioButton>
                    </StackPanel>

                    <Grid Margin="0, 20, 0, 10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Content="Refresh" Grid.Column="0" Click="ButtonBase_OnClick"  Margin="5"/>
                        <Button Content="View Details" Grid.Column="1" Click="Edit"  Margin="5"/>
                    </Grid>

                    <Grid Margin="0, 5, 0, 10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Content="Update Status" Grid.Column="0" Click="ButtonBase_OnClickAdd"  Margin="5"/>
                        <Button Content="Cancel/Close" Grid.Column="1" Click="ButtonBase_OnClickDelete"  Margin="5"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>

    <Page.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0, 10, 0, 3"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>

        <Style x:Key="InputBoxReadOnlyStyle" TargetType="TextBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="5, 0, 5, 0"/>
            <Setter Property="Background" Value="#EAEAEA"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="DatePickerReadOnlyStyle" TargetType="DatePicker">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#EAEAEA"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="ComboBoxReadOnlyStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#EAEAEA"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Background" Value="#2ECC71"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#95A5A6"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

    </Page.Resources>
</Page>