<Page x:Class="Assignment.WPF.AdminDashBoard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Assignment.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminDashBoard">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="ADMINISTRATION"
                   FontSize="26"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="10"
                   Foreground="#007ACC"/>

        <Menu Grid.Row="1" VerticalAlignment="Stretch" Background="#E5F1FF">
            <MenuItem Header="Manage Customer" Name="MenuCustomer" 
                      FontWeight="Bold" Click="ManageCustomer_Click" Margin="20, 0, 10, 0"/>
            <MenuItem Header="Manage Room" Name="MenuRoom" 
                      Click="ManageRoom_Click" Margin="10, 0, 10, 0"/>
            <MenuItem Header="Manage Booking Reservation" Name="MenuBooking" 
                      Click="ManageBooking_Click" Margin="10, 0, 10, 0"/>
            <MenuItem Header="Create Report" Name="MenuReport" 
                      Click="ManageReport_Click" Margin="10, 0, 10, 0"/>
            <Separator Style="{StaticResource {x:Static MenuItem.SeparatorStyleKey}}" Margin="10,0"/>
            <MenuItem Header="Logout" Foreground="DarkRed" Click="MenuItem_OnClickLogout" Margin="10, 0, 10, 0"/>
        </Menu>

        <Frame Grid.Row="2" Name="ContentFrame" NavigationUIVisibility="Hidden"/>

    </Grid>
</Page>
