<Page x:Class="Assignment.WPF.ChangePasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Assignment.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChangePasswordPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <HeaderedContentControl Grid.Row="0" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="20" Foreground="#007ACC" Name="ContentControl" Content="Đổi Mật khẩu"/>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Width="250" Margin="0, 20, 0, 0">
            <Grid Margin="5">
                <TextBlock Margin="5,0,5,0">Mật khẩu Cũ</TextBlock>
                <PasswordBox Margin="5,20,5,5" Name="txtOldPass" />
            </Grid>
            <Grid Margin="5">
                <TextBlock Margin="5,0,5,0">Mật khẩu Mới</TextBlock>
                <PasswordBox Margin="5,20,5,5" Name="txtNewPass" />
            </Grid>
            <Button Margin="5,20,5,5" Click="ButtonBase_OnClick" Height="35" FontWeight="Bold">Save</Button>
        </StackPanel>
    </Grid>
</Page>
