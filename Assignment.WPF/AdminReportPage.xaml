<Page x:Class="Assignment.WPF.AdminReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="AdminReportPage"
      Background="#F8F8F8">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="BÁO CÁO DOANH THU ĐẶT PHÒNG"
                   FontSize="24" 
                   FontWeight="Bold"
                   Foreground="#007ACC"
                   HorizontalAlignment="Center"
                   Margin="0, 10, 0, 15"/>

        <Border Grid.Row="1" 
                Background="White" 
                Padding="20" 
                CornerRadius="8" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1"
                HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                <TextBlock Text="Từ ngày:" VerticalAlignment="Center" Margin="0, 0, 10, 0" FontWeight="SemiBold"/>
                <DatePicker Name="dpStart" 
                            CalendarClosed="DpStart_OnCalendarClosed" 
                            Width="150"/>

                <TextBlock Text="—" VerticalAlignment="Center" Margin="15, 0"/>

                <TextBlock Text="Đến ngày:" VerticalAlignment="Center" Margin="15, 0, 10, 0" FontWeight="SemiBold"/>
                <DatePicker Name="dpEnd" 
                            CalendarClosed="DpStart_OnCalendarClosed" 
                            
                            Width="150"/>

                <Button Content="Tải lại/Bỏ lọc" 
                        Click="ButtonBase_OnClickReset" 
                        
                        Width="120" 
                        Margin="30, 0, 0, 0"/>
            </StackPanel>
        </Border>

        <DataGrid Grid.Row="3" Name="Reservation" 
                  CanUserAddRows="False" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True" 
                  SelectionMode="Single" 
                  Margin="0, 10, 0, 0"
                  MouseDoubleClick="Reservation_OnMouseDoubleClick"
                  >
            <DataGrid.Resources>
                <Style TargetType="Hyperlink">
                    <EventSetter Event="Click" Handler="Hyperlink_Click"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridHyperlinkColumn Header="ID Đặt Phòng" Binding="{Binding BookingReservation.BookingReservationId}" Width="100"/>
                <DataGridTextColumn Header="Số Phòng" Binding="{Binding Room.RoomNumber}" Width="100"/>
                <DataGridTextColumn Header="Khách hàng" Binding="{Binding BookingReservation.Customer.CustomerFullName}" Width="2*"/>
                <DataGridTextColumn Header="Ngày Bắt Đầu" Binding="{Binding StartDate, StringFormat='dd/MM/yyyy'}" Width="1.5*"/>
                <DataGridTextColumn Header="Ngày Kết Thúc" Binding="{Binding EndDate, StringFormat='dd/MM/yyyy'}" Width="1.5*"/>
                <DataGridTextColumn Header="Tổng Giá/Chi tiết" Binding="{Binding ActualPrice, StringFormat=C0}" Width="1.5*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>

    <Page.Resources>
        <Style x:Key="DatePickerFilterStyle" TargetType="DatePicker">
            <Setter Property="Height" Value="30"/>
            <Setter Property="BorderBrush" Value="#007ACC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="AlternatingRowBackground" Value="#F5F5F5"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#DDDDDD"/>
        </Style>

    </Page.Resources>
</Page>