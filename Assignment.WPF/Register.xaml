<Page x:Class="Assignment.WPF.Register"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="450"
      Title="Register"
      Background="#FFFFFF">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="CUSTOMER REGISTRATION"
                   Margin="20" 
                   VerticalAlignment="Top" 
                   HorizontalAlignment="Center" 
                   FontSize="22" 
                   FontWeight="Bold"
                   Foreground="#333333"/>

        <StackPanel Grid.Row="1" 
                    HorizontalAlignment="Center" 
                    Width="350" 
                    Margin="0, 10, 0, 20">

            <TextBlock Text="Customer Name" Margin="0, 10, 0, 5" FontSize="14" FontWeight="SemiBold"/>
            <TextBox Name="txtName" Height="35" Padding="5, 0" VerticalContentAlignment="Center"/>

            <TextBlock Text="Telephone" Margin="0, 10, 0, 5" FontSize="14" FontWeight="SemiBold"/>
            <TextBox Name="txtTelephone" Height="35" Padding="5, 0" VerticalContentAlignment="Center"/>

            <TextBlock Text="Email Address" Margin="0, 10, 0, 5" FontSize="14" FontWeight="SemiBold"/>
            <TextBox Name="txtEmail" Height="35" Padding="5, 0" VerticalContentAlignment="Center"/>

            <TextBlock Text="Password" Margin="0, 10, 0, 5" FontSize="14" FontWeight="SemiBold"/>
            <PasswordBox Name="txtPass" Height="35" Padding="5, 0" VerticalContentAlignment="Center"/>

            <TextBlock Text="Re-Type Password" Margin="0, 10, 0, 5" FontSize="14" FontWeight="SemiBold"/>
            <PasswordBox Name="txtRetypePass" Height="35" Padding="5, 0" VerticalContentAlignment="Center"/>

            <TextBlock Text="Date Of Birth" Margin="0, 10, 0, 5" FontSize="14" FontWeight="SemiBold"/>
            <DatePicker Name="dpDob" Height="35" Padding="5"/>


            <Button Content="REGISTER" 
                    Height="45" 
                    Margin="0, 30, 0, 0"
                    Background="#3498DB" 
                    Foreground="White"
                    FontSize="16"
                    FontWeight="Bold"
                    Click="ButtonBase_OnClick"/>

        </StackPanel>
    </Grid>
</Page>