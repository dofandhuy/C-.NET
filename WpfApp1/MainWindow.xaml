<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="1" Name="dgvDisplay" AutoGenerateColumns="False" CanUserAddRows="False" SelectedCellsChanged="dgvDisplay_SelectedCellsChanged" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Employee ID" Binding="{Binding Id, Mode=OneWay}" />
                <DataGridTextColumn Header="Employee Name" Binding="{Binding Name, Mode=OneWay}" />
                <DataGridTextColumn Header="Gender" Binding="{Binding Gender, Mode=OneWay}"/>
                <DataGridTextColumn Header="DOB" Binding="{Binding Dob, Mode=OneWay}"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding Phone, Mode=OneWay}"/>
                <DataGridTextColumn Header="IDNumber" Binding ="{Binding Idnumber, Mode=OneWay}"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Column="1" Orientation="Vertical" Width="450" HorizontalAlignment="Left" Background="Azure">
            <Label Content="Employee Information" FontSize="20" FontWeight="DemiBold" Foreground="Red"/>
            <StackPanel Orientation="Vertical" Margin=" 0,5,0,0" HorizontalAlignment="Left">
                <Label Content="Employee Id" />
                <TextBox Name="txtID" Width="450" />
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin=" 0,5,0,0" HorizontalAlignment="Left">
                <Label Content="Name" />
                <TextBox Name="txtName" Width="450"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin=" 0,5,0,0" HorizontalAlignment="Left">
                <Label Content="Gender" />
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Width="200">
                    <RadioButton Name="rbnMale" Content=" Male " GroupName="GenderGroup" Margin="0,0,15,0" IsChecked="True"/>
                    <RadioButton Name="rbnFemale" Content=" Female " GroupName="GenderGroup"/>
                </StackPanel>
            </StackPanel>


            <StackPanel Orientation="Vertical" Margin=" 0,5,0,0" HorizontalAlignment="Left">
                <Label Content="Dob" />
                <DatePicker Name="dpkDob" Width="450"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin=" 0,5,0,0" HorizontalAlignment="Left">
                <Label Content="Phone" />
                <TextBox Name="txtPhone" Width="450"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin=" 0,5,0,0" HorizontalAlignment="Left">
                <Label Content="IDNumber" />
                <TextBox Name="txtIDNumber" Width="450"/>
            </StackPanel>
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>

                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Name="btnAdd" Content="Add" Margin="5" Click="btnAdd_Click" />
                <Button Grid.Column="1" Name="btnUpdate" Content="Update" Margin="5" Click="btnUpdate_Click" />
                <Button Grid.Column="2" Name="btnDelete" Content="Delete" Margin="5" Click="btnDelete_Click" />
                <Button Grid.Column="3" Name="btnEdit" Content="Edit" Margin="5" Click="btnEdit_Click" />

            </Grid>
        </StackPanel>
    </Grid>
</Window>
